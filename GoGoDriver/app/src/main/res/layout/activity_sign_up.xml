<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUpActivity"
    android:background="@color/white">

    <!--Hinh Layout Đăng Kí-->
    <ImageView
        android:id="@+id/imageSignUp"
        android:layout_width="411dp"
        android:layout_height="210dp"
        android:background="@drawable/img_welcome_4"/>

    <!-- Nhập Họ Tên-->
    <LinearLayout
        android:id="@+id/layout_signup"
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:background="@drawable/layout_edit_signup"
        android:elevation="20dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/botron_edittext"
            android:paddingTop="5dp"
            android:textColorHint="#BBBBBB"
            app:hintTextColor="#24AA3D">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_FullnameUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Họ Tên"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:textColor="@color/black">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/botron_edittext"
            android:paddingTop="5dp"
            android:textColorHint="#BBBBBB"
            app:hintTextColor="#24AA3D">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_EmailUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:textColor="@color/black">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/botron_edittext"
            android:paddingTop="5dp"
            android:textColorHint="#BBBBBB"
            app:hintTextColor="#24AA3D">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_PassUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:textColor="@color/black">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/botron_edittext"
            android:paddingTop="5dp"
            android:textColorHint="#BBBBBB"
            app:hintTextColor="#24AA3D">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_PhoneUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Số điện thoại"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:textColor="@color/black">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:background="@drawable/botron_button"
        android:text="Đăng kí"
        android:textColor="@drawable/button_text_login"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5" />

    <ProgressBar
        android:id="@+id/Progress_bar_signup"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:indeterminateTint="#24AA3D"/>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:paddingLeft="20dp"
            android:text="Bạn đã có tài khoản?"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_SignIn"
            android:layout_width="147dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="Đăng Nhập"
            android:textColor="#24AA3D"
            android:textFontWeight="@integer/material_motion_duration_medium_1"
            android:textSize="20dp" />
    </LinearLayout>


</LinearLayout>